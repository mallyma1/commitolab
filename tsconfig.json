{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./client",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../shared/*"]
    },
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"]
}
